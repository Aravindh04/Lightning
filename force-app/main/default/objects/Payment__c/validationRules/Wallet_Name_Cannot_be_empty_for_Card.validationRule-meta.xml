<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Wallet_Name_Cannot_be_empty_for_Card</fullName>
    <active>true</active>
    <errorConditionFormula>TEXT( Payment_Method__c) = &#39;Wallet&#39; &amp;&amp; ISBLANK(TEXT(Wallet_Name__c))</errorConditionFormula>
    <errorMessage>Wallet Name Cannot be empty for Wallet Transactions</errorMessage>
</ValidationRule>
