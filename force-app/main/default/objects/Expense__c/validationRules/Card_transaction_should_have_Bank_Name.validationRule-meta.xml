<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Card_transaction_should_have_Bank_Name</fullName>
    <active>true</active>
    <errorConditionFormula>TEXT(Payment_Method__c) = &#39;Card&#39; &amp;&amp; ISBLANK(TEXT(Bank_Name__c))</errorConditionFormula>
    <errorDisplayField>Bank_Name__c</errorDisplayField>
    <errorMessage>Please select a &#39;Bank name&#39; for Card transactions</errorMessage>
</ValidationRule>
